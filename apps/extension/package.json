{
  "name": "@whoshiring/browser-extension",
  "displayName": "Entry Job Clipper",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Who's Hiring Inc. <contact@whoshiring.io>",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-s build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "next": "13.4.9",
    "plasmo": "^0.82.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@plasmohq/rps": "^1.8.7",
    "@types/chrome": "0.0.241",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "prettier": "3.0.0",
    "typescript": "5.1.6"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "externally_connectable": {
      "matches": [
        "*://*.localhost.com/*"
      ]
    }
  }
}