{
  "name": "@whoshiring/job-clipper",
  "displayName": "Entry Job Clipper",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "contributors": [
    "louisgv"
  ],
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "clean": "rm -rf build .plasmo .turbo node_modules"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "plasmo": "^0.82.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@plasmohq/rps": "^1.8.7",
    "@types/chrome": "0.0.241",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "postcss": "8.4.26",
    "prettier": "3.0.0",
    "typescript": "5.1.6"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "externally_connectable": {
      "matches": [
        "*://*.localhost.com/*"
      ]
    }
  }
}
